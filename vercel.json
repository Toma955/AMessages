{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://amessages.onrender.com",
    "NEXT_PUBLIC_SOCKET_URL": "https://amessages.onrender.com"
  }
}
